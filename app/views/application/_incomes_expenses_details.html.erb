<h3>Recettes et dépenses</h3>
<table id="payments" class="table table-bordered table-hover table-sorter">
  <thead>
    <tr>
      <th>Libellé</th>
      <th width="70">Débit</th>
      <th width="70">Crédit</th>
      <th width="140">Compte</th>
      <th width="90">Date</th>
    </tr>
  </thead>
  <tbody>
    <% model.incomes.received.each do |income| %>
      <tr>
        <td><%= income.label %></td>
        <td></td>
        <td class="success"><%= number_with_precision income.amount, precision: 2, delimiter: ' ' %></td>
        <td><%= income.account %></td>
        <td><%= l income.date %></td>
      </tr>
    <% end %>
    <% model.expenses.paid.each do |expense| %>
      <tr>
        <td><%= expense.label %></td>
        <td class="danger"><%= number_with_precision expense.amount, precision: 2, delimiter: ' ' %></td>
        <td></td>
        <td><%= expense.account %></td>
        <td><%= l expense.date %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr class="success <%= 'danger' if model.expenses.paid.sum(:amount) > model.incomes.received.sum(:amount) %>">
      <td><strong>TOTAL</strong></td>
      <td><%= number_with_precision model.expenses.paid.sum(:amount), precision: 2, delimiter: ' ' %></td>
      <td><%= number_with_precision model.incomes.received.sum(:amount), precision: 2, delimiter: ' ' %></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>

<h3>Créances et dettes</h3>
<table class="table table-bordered table-hover">
  <tr class="success">
    <td>Créances</td>
    <td width="65">-</td>
    <td width="65"><%= number_with_precision model.incomes.where(received: false).sum(:amount), precision: 2, delimiter: ' ' %></td>
    <td width="65">-</td>
  </tr>
  <tr class="danger">
    <td>Dettes</td>
    <td><%= number_with_precision model.expenses.where(paid: false).sum(:amount), precision: 2, delimiter: ' ' %></td>
    <td>-</td>
    <td>-</td>
  </tr>
  <tr class="success <%= 'danger' if model.expenses.where(paid: false).sum(:amount) > model.incomes.where(received: false).sum(:amount) %>">
    <td><strong>TOTAL</strong></td>
    <td>-</td>
    <td>-</td>
    <td><%= number_to_currency model.incomes.where(received: false).sum(:amount) - model.expenses.where(paid: false).sum(:amount) %></td>
  </tr>
</table>


<script type="text/javascript">
$(function() {
  $('#payments').tablesorter({
    sortList: [[4,<%=default_sort_order%>]],
    dateFormat: 'uk'
  }); 
});
</script>
